        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/10 mt-10 pt-6 text-center text-xs text-white/40">
      <p>
        &copy; {new Date().getFullYear()} The Midterm Project.
        <a
          href="/login"
          class="underline hover:text-white/60 ml-1"
        >
          Admin
