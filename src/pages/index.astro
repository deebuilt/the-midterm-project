---
import Layout from "../layouts/Layout.astro";
import Countdown from "../components/ui/Countdown";
import ElectionTracker from "../components/ui/ElectionTracker";
import { fetchSenateOverview, fetchHouseOverview } from "../lib/queries";

const { senateOverview } = await fetchSenateOverview();
const houseOverview = await fetchHouseOverview();
import type { NewsItem } from "../types";
import Parser from "rss-parser";

// Fetch latest headlines (3 items, build-time)
const parser = new Parser();
const FEEDS = [
  { url: "https://www.propublica.org/feeds/propublica/main", source: "ProPublica" as const },
  { url: "https://www.pbs.org/newshour/feeds/rss/politics", source: "PBS NewsHour" as const },
  { url: "https://www.theguardian.com/us-news/us-politics/rss", source: "The Guardian" as const },
];
const allHeadlines: NewsItem[] = [];
for (const feed of FEEDS) {
  try {
    const parsed = await parser.parseURL(feed.url);
    for (const item of parsed.items ?? []) {
      allHeadlines.push({
        title: item.title ?? "Untitled",
        link: item.link ?? "#",
        description: item.contentSnippet ?? item.content ?? "",
        pubDate: item.pubDate ?? "",
        source: feed.source,
        categories: (item.categories ?? []).map((cat: unknown) =>
          typeof cat === "string" ? cat : (cat as { _: string })._ ?? String(cat)
        ),
      });
    }
  } catch (e) {
    console.error(`Failed to fetch ${feed.source}:`, e);
  }
}
allHeadlines.sort((a, b) => new Date(b.pubDate).getTime() - new Date(a.pubDate).getTime());
const headlines = allHeadlines.slice(0, 3);

function timeAgo(dateStr: string): string {
  const diff = Date.now() - new Date(dateStr).getTime();
  const hours = Math.floor(diff / (1000 * 60 * 60));
  if (hours < 1) return "Just now";
  if (hours < 24) return `${hours}h ago`;
  const days = Math.floor(hours / 24);
  return `${days}d ago`;
}
---

<Layout title="Home" description="Learn about the 2026 U.S. midterm elections. Who's on the ballot, what's at stake, and why your vote matters.">
  <!-- Hero -->
  <section class="bg-navy text-white">
    <div class="max-w-5xl mx-auto px-4 py-24 md:py-32">
      <p class="text-sm font-mono tracking-widest text-white/40 uppercase mb-4">November 3, 2026</p>
      <h1 class="text-5xl md:text-7xl font-black tracking-tight leading-[1.05] mb-6 max-w-3xl">
        Know your ballot.<br />
        <span class="text-tossup">Own your vote.</span>
      </h1>
      <div class="mb-8">
        <Countdown client:load />
      </div>
      <p class="text-lg text-white/60 mb-10 max-w-xl leading-relaxed">
        35 Senate seats. 435 House seats. Thousands of decisions that shape
        your daily life. This is your guide to the 2026 midterms.
      </p>
      <div class="flex flex-wrap gap-3">
        <a
          href="/learn/how-congress-works"
          class="bg-white text-navy px-5 py-2.5 rounded-md text-sm font-semibold hover:bg-white/90 transition-colors"
        >
          Start learning
        </a>
        <a
          href="/find-your-ballot"
          class="border border-white/20 text-white/80 px-5 py-2.5 rounded-md text-sm font-semibold hover:bg-white/5 transition-colors"
        >
          Find your ballot
        </a>
      </div>
    </div>
  </section>

  <!-- Election Tracker -->
  <section class="py-12 px-4 border-b border-slate-100">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-xs font-mono tracking-widest text-slate-400 uppercase mb-6">Where we are</h2>
      <ElectionTracker client:load />
      <div class="mt-6 text-center">
        <a
          href="/calendar"
          class="text-sm text-slate-500 hover:text-dem transition-colors"
        >
          View full election calendar &rarr;
        </a>
      </div>
    </div>
  </section>

  <!-- What's at Stake -->
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-xs font-mono tracking-widest text-slate-400 uppercase mb-6">What's at stake</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Senate -->
        <a href="/senate" class="group block">
          <div class="border border-slate-200 rounded-lg p-6 hover:border-dem transition-colors">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold">The Senate</h3>
              <span class="text-sm text-slate-400 group-hover:text-dem transition-colors">&rarr;</span>
            </div>
            <div class="flex items-center gap-0.5 mb-4 rounded-full overflow-hidden h-3">
              <div class="bg-gop h-full rounded-l-full" style={`width: ${senateOverview.currentSplit.republican}%`}></div>
              <div class="bg-dem h-full rounded-r-full" style={`width: ${senateOverview.currentSplit.democrat}%`}></div>
            </div>
            <p class="text-sm text-slate-500 leading-relaxed">
              Republicans hold {senateOverview.currentSplit.republican}&ndash;{senateOverview.currentSplit.democrat}.
              Democrats need to flip <strong class="text-dem">{senateOverview.demsNeedToFlip} seats</strong> for a majority.
              {senateOverview.retirements.length} senators are retiring, creating open races.
            </p>
          </div>
        </a>

        <!-- House -->
        <a href="/house" class="group block">
          <div class="border border-slate-200 rounded-lg p-6 hover:border-gop transition-colors">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold">The House</h3>
              <span class="text-sm text-slate-400 group-hover:text-gop transition-colors">&rarr;</span>
            </div>
            <div class="flex items-center gap-0.5 mb-4 rounded-full overflow-hidden h-3">
              <div class="bg-gop h-full rounded-l-full" style={`width: ${(houseOverview.currentSplit.republican / houseOverview.totalSeats) * 100}%`}></div>
              <div class="bg-dem h-full rounded-r-full" style={`width: ${(houseOverview.currentSplit.democrat / houseOverview.totalSeats) * 100}%`}></div>
            </div>
            <p class="text-sm text-slate-500 leading-relaxed">
              All {houseOverview.totalSeats} seats contested.
              Democrats need <strong class="text-dem">{houseOverview.demsNeedToFlip} more seats</strong>.
              {houseOverview.retirements.total} incumbents retiring.
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Headlines -->
  {headlines.length > 0 && (
    <section class="border-b border-slate-100 py-10 px-4">
      <div class="max-w-5xl mx-auto">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xs font-mono tracking-widest text-slate-400 uppercase">Latest headlines</h2>
          <a href="/news" class="text-xs text-slate-400 hover:text-dem transition-colors">See all &rarr;</a>
        </div>
        <div class="divide-y divide-slate-100">
          {headlines.map((item) => (
            <a
              href={item.link}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start justify-between gap-4 py-3 group"
            >
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-slate-700 group-hover:text-dem transition-colors leading-snug line-clamp-2">
                  {item.title}
                </p>
              </div>
              <div class="flex-shrink-0 text-right">
                <span class="text-[10px] text-slate-400">{item.source}</span>
                <br />
                <span class="text-[10px] text-slate-300">{timeAgo(item.pubDate)}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Explore -->
  <section class="bg-slate-50 py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-xs font-mono tracking-widest text-slate-400 uppercase mb-2">Dive in</h2>
      <p class="text-2xl font-bold mb-8">Learn something new.</p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <!-- Lane 1: Start with the basics -->
        <div class="space-y-3">
          <h3 class="text-xs font-bold uppercase tracking-wider text-dem mb-1">New to this?</h3>
          {[
            { href: "/learn/how-congress-works", title: "How Congress Works", desc: "The two chambers and how a bill becomes law." },
            { href: "/learn/what-are-midterms", title: "What Are Midterms?", desc: "Why elections between presidential years matter." },
            { href: "/senate#101", title: "Senate 101", desc: "100 senators, 6-year terms, and the rotation system." },
          ].map((item) => (
            <a
              href={item.href}
              class="group flex items-start gap-3 bg-white rounded-lg p-4 border border-slate-200 hover:border-dem/40 transition-colors"
            >
              <div class="flex-1">
                <h4 class="text-sm font-semibold mb-0.5 group-hover:text-dem transition-colors">{item.title}</h4>
                <p class="text-xs text-slate-500 leading-relaxed">{item.desc}</p>
              </div>
              <span class="text-slate-300 group-hover:text-dem transition-colors text-sm mt-0.5">&rarr;</span>
            </a>
          ))}
        </div>

        <!-- Lane 2: Follow a guided path -->
        <div>
          <h3 class="text-xs font-bold uppercase tracking-wider text-navy mb-1">Learning tracks</h3>
          <a href="/learn" class="group block bg-white rounded-lg border border-slate-200 hover:border-navy/40 transition-colors overflow-hidden">
            <div class="p-4">
              <p class="text-sm font-semibold mb-2 group-hover:text-navy transition-colors">16 guides across 4 tracks</p>
              <p class="text-xs text-slate-500 leading-relaxed mb-3">
                Start from the basics and work your way up. Each guide builds on the last â€” from how government works to money, elections, and your ballot.
              </p>
              <div class="space-y-1.5">
                {[
                  { label: "How Government Works", color: "bg-dem" },
                  { label: "Money & Power", color: "bg-tossup" },
                  { label: "Elections & Voting", color: "bg-navy" },
                  { label: "Your Ballot", color: "bg-gop" },
                ].map((track) => (
                  <div class="flex items-center gap-2">
                    <div class={`w-2 h-2 rounded-full ${track.color} shrink-0`}></div>
                    <span class="text-xs text-slate-600">{track.label}</span>
                  </div>
                ))}
              </div>
            </div>
            <div class="bg-slate-50 border-t border-slate-100 px-4 py-2.5">
              <span class="text-xs text-navy font-medium group-hover:underline">Browse all guides &rarr;</span>
            </div>
          </a>
        </div>

        <!-- Lane 3: Deep Dives -->
        <div>
          <h3 class="text-xs font-bold uppercase tracking-wider text-tossup mb-1">Go deeper</h3>
          <a href="/deep-dives" class="group block bg-slate-900 rounded-lg border border-slate-700 hover:border-tossup/40 transition-colors overflow-hidden">
            <div class="p-4">
              <span class="inline-block text-[10px] font-bold uppercase tracking-wider text-tossup bg-tossup/15 px-2 py-0.5 rounded-full mb-3">
                3-Part Series
              </span>
              <p class="text-sm font-semibold text-white mb-2 group-hover:text-tossup transition-colors">
                Presidential Overreach
              </p>
              <p class="text-xs text-white/50 leading-relaxed mb-3">
                230 years of presidents breaking guardrails. What broke, what we built, and what we need to build next.
              </p>
              <div class="space-y-1.5">
                <p class="text-xs text-white/40">&#x1F578; The Worst of All of Them</p>
                <p class="text-xs text-white/40">&#x1F4CB; The Scorecard</p>
                <p class="text-xs text-white/40">&#x1F9F9; Sweeping Up the Rubble</p>
              </div>
            </div>
            <div class="bg-white/5 border-t border-white/10 px-4 py-2.5">
              <span class="text-xs text-tossup font-medium group-hover:underline">Read the series &rarr;</span>
            </div>
          </a>
        </div>

      </div>
    </div>
  </section>
</Layout>
