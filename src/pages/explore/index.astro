---
import Layout from "../../layouts/Layout.astro";
import ReelectOrReject from "../../components/ui/ReelectOrReject";
import { fetchIncumbentsWithVotes } from "../../lib/queries";

const incumbents = await fetchIncumbentsWithVotes();
---

<Layout
  title="Re-elect or Reject"
  description="All 35 Senate seats up in 2026. Swipe right to re-elect, left to reject."
  ogTitle="Re-elect or Reject | The Midterm Project"
  ogDescription="All 35 Senate seats up in 2026. Swipe right to re-elect, left to reject. How would you vote?"
>
  <section class="max-w-lg mx-auto py-8 px-4">
    <div class="text-center mb-6">
      <h1 class="text-3xl font-black mb-2">Re-elect or Reject</h1>
      <p class="text-slate-500 text-sm">
        All {incumbents.length} Senate seats up in 2026. Swipe right to re-elect, left to reject.
      </p>
    </div>

    <ReelectOrReject client:load incumbents={incumbents} />
  </section>
</Layout>
